<% layout("/layouts/boilerplate") %> <%- include("../includes/view.ejs") %>
<div class="container mt-4">

    <div class="row col-lg-5 mx-3">
        <form class="d-flex " role="search">
            <input class="form-control me-2 text-body-secondary bg-secondary-subtle" data-bs-theme="dark" type="search" placeholder="SWE1004" aria-label="Search">
            <button class="btn" data-bs-theme="dark" type="submit">Search</button>
        </form>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-5" data-bs-theme="dark">
      <%for(let course of courses){%>
      <a href="/courses/<%=course._id%>">
        <div class="card p-3 box">
          <div>
            <div class="card-body">
              <p class="card-text fs-5 fw-semibold"> <%=course._id%></p>
            </div>
            <div class="card-body">
              <p class="card-text fs-6 fw-medium"><%=course.title%></p>
            </div>
          </div>
        </div>
      </a>
      <%}%>
    </div>
</div>
