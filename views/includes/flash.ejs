<% if (success && success.length) { %>
    <div class="alert alert-dismissible fade show col-10 offset-0 col-md-6 offset-md-0 position-fixed z-3 bg-success-subtle mt-2" data-bs-theme="dark" role="alert" style="top: 10px; left: 50%; transform: translateX(-50%);">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>   

<% if (error && error.length) { %>
    <div class="alert alert-dismissible fade show col-10 offset-0 col-md-6 offset-md-0 position-fixed z-3 bg-danger-subtle mt-2" data-bs-theme="dark" role="alert" style="top: 10px; left: 50%; transform: translateX(-50%);">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>